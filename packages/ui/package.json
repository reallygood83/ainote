{
  "name": "@deta/ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "svelte": "./src/lib/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/lib/index.ts",
      "import": "./dist/index.js"
    },
    "./legacy": {
      "types": "./dist/components/legacy.d.ts",
      "svelte": "./src/lib/components/legacy.ts",
      "import": "./dist/components/legacy.js"
    },
    "./src/lib": "./src/lib/index.ts",
    "./src/lib/*": "./src/lib/*",
    "./src/*": "./src/*",
    "./styles/*": "./src/lib/styles/*",
    "./dist": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "node ./scripts/build-tokens.mjs && svelte-package --watch",
    "tokens:build": "node ./scripts/build-tokens.mjs",
    "build": "svelte-kit sync && node ./scripts/build-tokens.mjs && svelte-package",
    "build:types": "tsc --emitDeclarationOnly",
    "dev:tailwind": "yarn run tailwindcss -i ./src/app.css -o ./src/output.css --watch --minify",
    "build:tailwind": "yarn run tailwindcss -i ./src/app.css -o ./src/output.css --minify",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "package": "svelte-package",
    "sync": "svelte-kit sync"
  },
  "devDependencies": {
    "@deta/types": "*",
    "@horizon/eslint-config": "*",
    "@horizon/typescript-config": "*",
    "@internationalized/date": "^3.10.0",
    "@svelte-plugins/tooltips": "^3.0.0",
    "@sveltejs/kit": "^2.31.1",
    "@sveltejs/package": "^2.4.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.2",
    "@tailwindcss/typography": "^0.5.15",
    "@tokens-studio/sd-transforms": "^2.0.1",
    "@tsconfig/svelte": "^5.0.4",
    "date-fns": "^3.2.0",
    "emoji-picker-element": "^1.23.0",
    "emoji-picker-element-data": "^1",
    "perfect-freehand": "^1.2.2",
    "postcss": "^8.4.38",
    "sass": "^1.70.0",
    "style-dictionary": "^4.0.0",
    "svelte": "^5.38.1",
    "svelte-autosize": "^1.1.0",
    "svelte-check": "^4.0.0",
    "svelte-motion": "^0.12.2",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.2",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.5.0",
    "vite": "^7.1.5",
    "vite-plugin-markdown": "^2.2.0"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.4.0",
    "@deta/icons": "*",
    "@deta/services": "*",
    "@deta/utils": "*",
    "bits-ui": "^2.9.3",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^0.2.1"
  }
}
